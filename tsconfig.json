{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "typeRoots": ["node_modules/@types/"],
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "Dockerfile", "docker-compose.yml"],
  "ts-node": {
    "compilerHost": true,
    "transpileOnly": true,
    "files": true,
    "pretty": true
  }
}
